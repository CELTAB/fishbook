extends base_layout

block append content
  div(class="container ")
    div(class="row")
      div(class="col-md-1")
          a(class="btn btn-primary" href="/add_institutions") Add institution
    div(class="row")      
      div(class="col-md-9")        
        table(class="table")
          thead
            tr
              th Name
              th Thumbnail
          tbody(id="tableBody")
          -var jsonArray = JSON.parse(institutions)
          for data in jsonArray
            tr 
              td= data.name
              td 
                img(src='/uploads/images/'+data.image_name)
