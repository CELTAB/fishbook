extends base_layout

block append stylesheets
  link(href="/css/map.css" rel="stylesheet")

block append scripts
    script(src='/js/jquery.min.js')
    script(src='https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false')

    script(). 
      var latDefault = "-24.77031290445274";
      var lngDefault = "-54.36337910592556";
      var marker = null;
      
      var latLng;
      var map;

      function initialize() {
        latLng = new google.maps.LatLng(latDefault, lngDefault);
        var mapOptions = {
          zoom: 8,
          center: latLng,
          mapTypeId: google.maps.MapTypeId.HYBRID
        };
        map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        $("#mapModal").on("shown.bs.modal", function () {
            google.maps.event.trigger(map, "resize");
        });

        create_marker(latLng);
      }

      google.maps.event.addDomListener(window, 'load', initialize);

      function create_marker(latLng){
        marker = new google.maps.Marker({
          map: map,
            draggable: true 
        });

        marker.setPosition(latLng);
        map.setZoom(8);
        
        google.maps.event.addListener(map, "click", function(event) {
          marker.setPosition(event.latLng);
        });
        google.maps.event.addListener(marker, "drag", function(event) {
          marker.setPosition(event.latLng);
        });
        
        map.setCenter(latLng);
      }     

      function saveChanges(){
        console.log('Save Google Maps new Location');
        var newLatLong = marker.getPosition();
        var position = newLatLong.lat() + ',' + newLatLong.lng();
        $('input[id="collectorLocation"]').val(position);
      }


block append content
  div(class="container")
    div(class="row")
      div(class="col-md-6")
        form(role="form" method="post" action="/add_collectors")
          div(class="form-group")

            label(for="institution") Institution
            select(name="institution_id" id="institution" class="form-control")
                -var jsonArray = JSON.parse(institutions_list)
                for data in jsonArray
                  option(value=data._id) #{data.name}

            label(for="collectorsName") Name
            input(type="text" class="form-control" id="collectorsName" name="name")

            label(for="collectorsMAC") MAC
            input(type="text" class="form-control" id="collectorsMAC" name="mac")

            label(for="collectorDesc") Description
            input(type="text" class="form-control" id="collectorDesc" name="description")

            div(class="row")
              div(class="col-md-10")
                label(for="collectorLocation") Location
                input(type="text" class="form-control" id="collectorLocation" name="location" disabled=true)
              div(class="col-md-1")
                a(data-toggle="modal" data-target="#mapModal" class="btn btn-default btn-margin") Mapa

          button(type="submit" class="btn btn-default") Submit

    div(class="modal fade" id="mapModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            button(type="button" class="close" data-dismiss="modal" aria-hidden="true") x
            h4(class="modal-title" id="myModalLabel") Modal title

          div(class="modal-body")
            div(id="mapCanvasRow" class="row")
              div(class="col-md-12")
                div(class="google-map-canvas" id="map-canvas")   
          div(class="modal-footer")
            button(type="button" class="btn btn-default" data-dismiss="modal") Close
            button(type="button" class="btn btn-primary" onclick="javascript:saveChanges();") Save changes