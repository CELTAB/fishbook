extends index

block append content
  div(class="container")
    div(class="row")
      div(class="col-md-6")
        form(role="form" method="post" action="search_rfids")
          div(class="form-group")

            label(for="collectorsID") Collector ID
            input(type="text" class="form-control" id="collectorsID" name="collector_id")

            label(for="tag") TAG
            input(type="text" class="form-control" id="tag" name="tag")

            label(for="endDate") Start Date
            input(type="text" class="form-control" id="endDate" name="start_date")

            label(for="startDate") End Date
            input(type="text" class="form-control" id="startDate" name="end_date")

            input(type="selector" class="form-control" id="saf" name="asfd")

          button(type="submit" class="btn btn-default") Search
    if result_list
      div(class="row")      
        div(class="col-md-9")        
          table(class="table")
            thead
              tr
                th ID Collector
                th Antenna
                th TAG
                th Date
            tbody(id="tableBody")
            -var jsonArray = JSON.parse(result_list)
            for data in jsonArray
              tr 
                td= data.idcollectorpoint
                td= data.idantena
                td= data.identificationcode
                td= data.datetime
