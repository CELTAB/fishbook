extends base_layout

block append content
  div(class="container")
    div(class="row")
      div(class="col-md-6")
        form(role="form" method="post" action="profile" enctype="multipart/form-data")
          div(class="form-group")

            -var name = ''
            if profile.name 
              -name= profile.name

            -var email = ''
            if profile.email 
              -email= profile.email
              
            label(for="userName") Name
            input(type="text" class="form-control" id="userName" name="name" value="#{name}")

            label(for="userEmail") E-mail
            input(type="text" class="form-control" id="userEmail" name="email"  value="#{email}")

            label(for="userPhoto") Photo
            input(type="file" id="userPhoto" name="photo")
            if profile.photo
              img(class="img-thumbnail img-custom-small" src='/uploads/images/'+profile.photo)

          button(type="submit" class="btn btn-default") Update
