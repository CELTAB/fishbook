extends base_layout

block append content
  div(class="container")
    div(class="row")
      div(class="col-md-6")
        form(role="form" method="post" action="import" enctype="multipart/form-data")
          div(class="form-group")
            label(for="importFile") File
            input(type="file" id="importFile" name="import_file")
          button(type="submit" class="btn btn-default") Import
          if import_error
            div(class="alert bg-danger fade in")
              strong 
                = import_error
              button(type="button" class="close" data-dismiss="alert" aria-hidden="true") × 
          else if import_success
            div(class="alert bg-success fade in")
              strong
                = import_success
              button(type="button" class="close" data-dismiss="alert" aria-hidden="true") × 
                  